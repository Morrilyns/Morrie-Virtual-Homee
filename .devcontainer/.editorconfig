# EditorConfig; To define and maintain consistent coding styles for the project. 

# EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,html,css,scss,json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# 4 spaces indentation for Makefiles
[Makefile]
indent_style = space
indent_size = 4
